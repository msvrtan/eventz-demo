{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>We just added your request for a ticket</h1>

        <table>
            <tbody>
            <tr>
                <th>Event</th>
                <td>{{ wantedTicket.event.name }}</td>
            </tr>
            <tr>
                <th>Ticket</th>
                <td>{{ wantedTicket.ticketType.name }}</td>
            </tr>
            <tr>
                <th>Ticketsneeded</th>
                <td>{{ wantedTicket.ticketsNeeded }}</td>
            </tr>
            <tr>
                <th>Maximumpriceperticket</th>
                <td>{{ wantedTicket.maximumPricePerTicket }}</td>
            </tr>
            <tr>
                <th>Maximumpriceperticketcurrency</th>
                <td>{{ wantedTicket.maximumPricePerTicketCurrency }}</td>
            </tr>
            <tr>
                <th>Notificationemail</th>
                <td>{{ wantedTicket.notificationEmail }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('company_ticket_type_page', { 'eventId': wantedTicket.event.id,'id': wantedTicket.ticketType.id }) }}" class="btn btn-default">Back to "{{ wantedTicket.ticketType.name }}" page</a>
        <a href="{{ path('company_eventz_page', { 'id': wantedTicket.event.id }) }}" class="btn btn-default">Back to "{{ wantedTicket.event.name }}" event page</a>
    </div>
{% endblock %}
